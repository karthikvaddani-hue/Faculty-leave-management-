CREATE DATABASE faculty_leave_db;
USE faculty_leave_db;

CREATE TABLE users (
    id VARCHAR(20) PRIMARY KEY,
    password VARCHAR(50),
    role VARCHAR(10)  -- FACULTY / HOD / ADMIN
);

CREATE TABLE leaves (
    leave_id INT AUTO_INCREMENT PRIMARY KEY,
    faculty_id VARCHAR(20),
    leave_type VARCHAR(20),
    from_date DATE,
    to_date DATE,
    reason VARCHAR(200),
    status VARCHAR(20)
);
